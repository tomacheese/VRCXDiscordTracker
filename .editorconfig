# IDE0021: 不要なnull条件演算子使用の警告
dotnet_diagnostic.IDE0021.severity = warning
# IDE0022: 不要なnull許容型使用の警告
dotnet_diagnostic.IDE0022.severity = warning
# IDE0028: 不要な条件演算子使用の警告
dotnet_diagnostic.IDE0028.severity = warning
# IDE0030: 不要なthis修飾子使用の警告
dotnet_diagnostic.IDE0030.severity = warning
# IDE0031: 不要なbase修飾子使用の警告
dotnet_diagnostic.IDE0031.severity = warning
# IDE0039: 不要なreadonly修飾子使用の警告
dotnet_diagnostic.IDE0039.severity = warning
# IDE0044: フィールドreadonly指定漏れの警告
dotnet_diagnostic.IDE0044.severity = warning
# IDE0050: 不要なprivate修飾子使用の警告
dotnet_diagnostic.IDE0050.severity = warning
# IDE0051: 未使用privateメンバーの警告
dotnet_diagnostic.IDE0051.severity = warning
# IDE0052: 書き込み専用フィールド未使用の警告
dotnet_diagnostic.IDE0052.severity = warning
# IDE0055: コードフォーマット違反の警告
dotnet_diagnostic.IDE0055.severity = warning
# IDE0059: 未使用変数の警告
dotnet_diagnostic.IDE0059.severity = warning
# IDE0060: 未使用パラメータの警告
dotnet_diagnostic.IDE0060.severity = warning
# IDE0063: usingステートメントスコープ違反の警告
dotnet_diagnostic.IDE0063.severity = warning
# IDE0075: 不要な条件式使用の警告
dotnet_diagnostic.IDE0075.severity = warning
# IDE0078: 不要なswitch式使用の警告
dotnet_diagnostic.IDE0078.severity = warning
# IDE0079: 不要な#pragma警告使用の警告
dotnet_diagnostic.IDE0079.severity = warning
# IDE0080: 不要なnull許容型使用の警告
dotnet_diagnostic.IDE0080.severity = warning
